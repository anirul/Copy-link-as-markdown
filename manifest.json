{
  "name": "Copy link as markdown",
  "version": "0.4",
  "manifest_version": 2,
  "description": "Copy link as markdown",

  "permissions": [
    "tabs", "https://*/", "http://*/"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  }
}