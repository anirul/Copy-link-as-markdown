{
  "name": "Backlog Clipper",
  "version": "0.2",
  "manifest_version": 2,
  "description": "開いてるBacklogの課題からmd形式のlistタグを生成する",

  "permissions": [
    "tabs", "https://*.backlog.jp/"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "options_page": "options.html"
}